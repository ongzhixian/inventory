@functions {
    public string ListItemClass(string targetName)
    {
        if (ViewContext.RouteData.Values["controller"].Equals(targetName))
        {
            return "active";
        }
            
        return string.Empty;
    }
    public bool IsExpectedRoute(string routePart, string value)
    {
        // routePart can be "area", "controller" or "action"
        return ViewContext.RouteData.Values[routePart].Equals(value);
    }
}

